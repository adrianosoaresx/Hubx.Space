{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django (runserver)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver"],
      "django": true,
      "console": "integratedTerminal",
      "env": {
        "DJANGO_SETTINGS_MODULE": "Hubx.settings"
      }
    },
    {
      "name": "ASGI com Daphne (porta 8001)",
      "type": "python",
      "request": "launch",
      "module": "daphne",
      "args": ["Hubx.asgi:application", "-b", "127.0.0.1", "-p", "8001"],
      "console": "integratedTerminal",
      "env": {
        "DJANGO_SETTINGS_MODULE": "Hubx.settings"
      }
    }
  ]
}
